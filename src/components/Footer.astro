---
const {footer,footerText,grayText}=Astro.props
---


<main class="flex flex-col">

	<div class="-mb-20" >
		<img src={footer} alt="baner"
		class="object-cover h-[600px] lg:h-[1000px] w-full ">
		
	</div>
<div class="bg-black px-20">
<p class="text-gray-500 pt-32 md:pt-20 -mt-20 font-bold pl-20">
	{grayText}
</p>
<div class="grid grid-cols-1 gap-20 items-center md:grid-cols-4 mt-1 justify-between py-10">
<h3 class="col-span-3 text-white font-bold w-3/4 pl-20 ">
{footerText}
</h3>
<span >
<button class="bg-red-500 py-4 px-6 text-white rounded-lg lg:text-base font-bold">
Kontaktirajte nas  &rarr;
</button>
</span>

</div>
</div>
<div class="bg-black/90 flex flex-wrap justify-between px-20 text-white">
	<p>
		© <span id="year"></span> epepe.d.o.o
	</p>
	<p>
		Impressum | Politike privatnosti | O kolačićima
	</p>

</div>
</main>
<script>
	document.querySelector('#year').textContent= new Date().getFullYear().toString()

</script>